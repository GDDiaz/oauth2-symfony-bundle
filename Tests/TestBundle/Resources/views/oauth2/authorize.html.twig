{% extends 'TestBundle::html.html.twig' %}

{% set head_title = 'Authorize Application | AuthBucket\\Bundle\\OAuth2Bundle' %}

{% block page %}
    {% embed 'TestBundle::page.html.twig' %}

    {% block main %}
        <h2 class="page-header">Authorize Application</h2>
        <p>{{ username }}, {{ client_id }} would like permission to access your account:</p>
        <ul>
            {% for scope in scopes %}
                <li>{{ scope }}</li>
            {% endfor %}
        </ul>
        <form action="#" method="post">
            {{ form_widget(form) }}
            <button class="btn btn-success" type="submit" name="submit" />Authorize Application</button>
        </form>
    {% endblock %}

    {% block aside %}
        <h2 class="page-header">Actions</h2>
        <p><a class="btn btn-primary" role="button" href="{{ path('oauth2_authorize_logout') }}">Logout</a></p>
        <p><a class="btn btn-primary" role="button" href="{{ path('oauth2_index') }}">Return</a></p>
    {% endblock %}

    {% endembed %}
{% endblock %}
